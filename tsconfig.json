{
    "compilerOptions": {
        /* Basic */
        "lib": [
            "ES2022"
        ],
        "target": "ES2022",
        "module": "CommonJS",
        "skipLibCheck": true,

        /* Compiling */
        "inlineSourceMap": false,
        "declaration": true,
        "allowJs": true,
        "rootDir": "./src",
        "outDir": "./dist",

        /* Strict Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "importsNotUsedAsValues": "error",

        /* Types */
        "types": [
            "node"
        ],
        "forceConsistentCasingInFileNames": true,

        /* Module Resolution */
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
